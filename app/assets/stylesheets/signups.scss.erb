body, html {
	padding: 0px;
	margin: 0px;
}

.mainnew {
	height: 700px;
	background-image: url(<%= asset_path "new.jpg" %>);
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
	background-repeat: no-repeat;
	background-position: center;
}

.container {
	width: 940px;
}

.mainnew h1 {
	text-align: center;
	margin-top: 140px;
	padding-bottom: 20px;
	color: #fff;
	font-size: 45px;
}

.form-group {
	color: #fff;
	font-size: 20px;
	text-shadow: 1px 1px #000;
}

.btn {
	background-color: #EDC923;
	color: #1A0D07;
	padding: 10px 25px;
}


