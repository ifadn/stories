body, html {
	padding: 0px;
	margin: 0px;
}

.main {
	height: 700px;
	background-image: url(<%= asset_path "stock.jpg" %>);
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
	background-repeat: no-repeat;
	background-position: center;
}

.container {
	width: 940px;
}

.main h1 {
	margin-top: 280px;
	color: #fff;
	font-size: 45px;
}

span {
	color: #656563;
	text-shadow: none;
}

.main a {
	color: #fff;
	text-decoration: none;
	padding: 15px 30px;
	background-color: #286090;
	font-size: 18px;
	margin-top: 20px;
}

.supporting {
	padding-top: 50px;
	padding-bottom: 65px;
	text-align: center;
}

.secondary {
	height: 350px;
	background-image: url(<%= asset_path "mountain.jpg" %>);
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;
	background-repeat: no-repeat;
	background-position: center;
}

.tertiary {
	text-align: center;
	padding-top: 50px;
	padding-bottom: 65px;
}

.tertiary h1 {
	font-size: 50px;
	padding-bottom: 25px;
}

.tertiary a {
	color: #fff;
	text-decoration: none;
	padding: 15px 30px;
	background-color: #286090;
	font-size: 18px;
}

.footer {
	padding-top: 35px;
	padding-bottom: 35px;
	background-color: #F9F9F9;
	text-transform: uppercase;
	text-align: center;
}

.body {
  left: 0;
  margin: 0;
  overflow: hidden;
  position: relative;
}

/* Initial menu */
.menu {
  left: -285px;  /* start off behind the scenes */
  height: 100%;
  position: fixed;
  width: 285px;
  background-color: #201E29;
}

.menu ul {
  border-top: 1px solid #636366;
  list-style: none;
  margin: 0;
  padding: 0;
}

.menu li {
  border-bottom: 1px solid #636366;
  font-family: 'Open Sans', sans-serif;
  line-height: 45px;
  padding-bottom: 3px;
  padding-left: 20px;
  padding-top: 3px;
}

.menu a {
  color: #fff;
  font-size: 15px;
  text-decoration: none;
  text-transform: uppercase;
}

.icon-close {
  cursor: pointer;
  padding-top: 15px;
  padding-bottom: 15px;
  padding-right: 15px;
  color: #fff;
  text-align: right;
  text-transform: uppercase;
}

.icon-menu {
  color: #fff;
  cursor: pointer;
  font-family: 'Open Sans', sans-serif;
  font-size: 16px;
  padding-bottom: 15px;
  padding-left: 15px;
  padding-top: 15px;
  text-decoration: none;
  text-transform: uppercase;
}

.icon-menu i {
  margin-right: 5px;
}

