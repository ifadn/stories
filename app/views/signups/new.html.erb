<div class="body">
	<div class="mainnew">
		<div class="icon-menu">
			Menu
		</div>
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<h1>Get the latest updates from Stories</h1>
				</div>
			</div>
			<div class="row">
				<div class="col-md-4 col-md-offset-4">
					<%= form_for(@signup) do |f| %>
						<div class="form-group">
							<%= f.label "First Name" %>
							<%= f.text_field :firstname, :class => 'form-control' %>
						</div>
						<div class="form-group">
							<%= f.label "Email" %>
							<%= f.email_field :email, :class => 'form-control' %>
						</div>
						<%= f.submit "Join", class: "btn" %>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>